<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Headline" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font_dark</item>
    </style>

    <style name="TextAppearance.Date" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_light_grey</item>
    </style>

    <style name="TextAppearance.Introduction" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_dark</item>
    </style>

</resources>